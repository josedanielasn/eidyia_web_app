  <div class="content-inner">
    <header class="page-header">
            <div class="container-fluid">
            <h2 class="no-margin-bottom"><%= link_to "Dashboard", index_announcement_path  %> / <%= link_to "Batch", batch_index_path  %></h2>
          </div>
    </header>   
      
    <% if flash[:notice]%>
          <div class="alert alert-danger" role="alert">
              <%=  flash[:error] = "An Error occured!"%>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
                    </button>
            </div>
    <%end%>
    <section class="courses-section">
          <div class="col-lg-6 mx-auto">
            <div class="card">
              <div class="card-header d-flex align-items-center">
                <h2 class="h4">Edit Course </h2>
              </div>
              <div class="card-body">
                <%=  form_with url: update_batch_url(@batch), method: :put, :class => "form-horizontal" do |f|%>
                    <div class="form-group row">
                          <label class="col-sm-4 form-control-label">Batch Name</label>
                    
                      <div class="col-sm-8">
                         <%= f.text_field :batch_name, :value => @batch.batch_name, class: "form-control" %>
                         
                      </div>
                      
                    </div>
                    <div class="form-group row">       
                        <div class="col-sm-12 mt-2 offset-sm-4">
                          <%= f.submit "Save ", class: "btn btn-primary"%>
                        </div>
                    </div>
                  <%end%> 
              </div>
            </div>
          </div>
    </section>
    <%= render partial: 'shared/footer' if current_user %>       
  </div> 
