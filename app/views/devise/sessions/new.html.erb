<%= stylesheet_link_tag "login", media: "all", "data-turbolinks-track" => "reload" %>
        <div class="page login-page">
            <div class="container d-flex align-items-center">
              <div class="form-holder has-shadow">
                <div class="row">
                  <div class="col-lg-6">
                    <div class="info d-flex align-items-center">
                      <div class="content">
                        <div class="logo">
                          <h1>Eidiya</h1>
                        </div>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-6 bg-white">
                    <div class="form d-flex align-items-center">
                      <div class="content">
                       <%= form_for(resource, as: resource_name, url: session_path(resource_name),:class => "form-validate") do |f| %>
                          <div class="form-group">
                            <%= f.email_field :email, value:"", class: "input-material" %>
                            <%= f.label :email, class: "label-material" %> 
                          </div>
                          <div class="form-group">
                              <%= f.password_field :password, class:"input-material" %>
                              <%= f.label :password, class: "label-material" %>
                          </div>
                              <%= f.submit "Login", class: "btn", id:"login" %>
                          <% end %>
                        <%= link_to "Forgot password?", new_password_path(resource_name)%><br>
                  
                          <small>Do not have an account? </small>
                         <%= link_to "Signup", new_registration_path(resource_name), class: "signup" %> 

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
