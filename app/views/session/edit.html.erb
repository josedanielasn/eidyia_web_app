<div class="content-inner">
    <header class="page-header">
          <div class="container-fluid">
                <h2 class="no-margin-bottom"><%= link_to "Dashboard", index_announcement_path  %> / <%= link_to "Session",session_index_path  %></h2>
          </div>
    </header>   
<section>
<div class="col-lg-6 mx-auto">
            <div class="card">
              <div class="card-header d-flex align-items-center">
                <h2 class="h4">Edit Session </h2>
              </div>
              <div class="card-body">
                  <%= form_with url: update_session_url(@session), method: :put, class: "form-horizontal" do |f| %>
                    
                     <div class="form-group row">
                          <label class="col-sm-4 form-control-label">Session Name</label>       
                      <div class="col-sm-8">
                         <%= f.text_field :session_name, :value => @session.session_name, class: "form-control" %>
                      </div>
                    </div>

                    <div class="form-group row">
                          <label class="col-sm-4 form-control-label">Program Name</label>       
                      <div class="col-sm-8">
                         <%= f.select :program_id, @program.collect  { |p|
                              [ "#{p.try(:course).try(:course_name)}--#{p.try(:batch).try(:batch_name)}", p.id ]},
                                {:selected => @get_program}, {class: 'form-control'}
                              %>
                        </div>
                    </div>
        
                       <div class="form-group row">       
                        <div class="col-sm-12 mt-2 offset-sm-4">
                          <%= f.submit "Save ", class: "btn btn-primary"%>
                        </div>
                      </div>
                    
                  <% end %>
              </div>
            </div>
          </div>
  </section>
          <%= render partial: 'shared/footer' if current_user %>    
</div>
