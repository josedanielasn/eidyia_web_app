<div class="content-inner">
        <header class="page-header">
            <div class="container-fluid">
            <h2 class="no-margin-bottom"><%= link_to "Dashboard", index_announcement_path  %> / <%= link_to "Session",new_session_path  %></h2>
            </div>
        </header>  
      <section class="session-section">
       <% if flash[:notice]%>
            <div class="alert alert-danger" role="alert">
                  <%=  flash[:error] = "An Error occured!"%>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                        </button>
            </div>
          <%end%>
          <div class="col-lg-6 mx-auto">
              <div class="card">
                  <div class="card-header d-flex align-items-center">
                    <h2 class="h4">Create session </h2>
                  </div>
                  <div class="card-body">
                      <%= form_with url: create_session_path, local: true do |f| %>
                                <div class="form-group row">
                                      <label class="col-sm-4 form-control-label">Session Name</label>
                                      <div class="col-sm-8">
                                          <%= f.text_field :session_name,placeholder: "Enter Text", class: "form-control" %>
                                      </div>
                            
                                  </div>
                                  <div class="form-group row">
                                        <label class="col-sm-4 form-control-label"> Program</label>
                                    <div class="col-sm-8">
                                        <%= f.select :program_id, @program.collect  { |p| 
                                          [ "#{p.try(:course).try(:course_name)}--#{p.try(:batch).try(:batch_name)}", p.id ] },{include_blank: "-Select a Course-"},
                                        {class: "form-control" } %>
                                    </div>
                                  </div>

                                    <div class="form-group row">       
                                        <div class="col-sm-12 mt-2 offset-sm-4">
                                          <%= f.submit "Create ", class: "btn btn-primary"%>
                                        </div>
                                    </div>
                            </div>
                      <% end %>
                   </div>
            </div>
      </section>
      <%= render partial: 'shared/footer' if current_user %>    
</div>
