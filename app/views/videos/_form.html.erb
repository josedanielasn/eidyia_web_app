  <section class="courses-section">
          <div class="col-lg-6 mx-auto">
            <div class="card">
              <div class="card-header d-flex align-items-center">
                <h2 class="h4">Upload a Video </h2>
              </div>
              <div class="card-body">
                <%= form_with(model: video, local: true) do |form| %>
                  <% if video.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(video.errors.count, "error") %> prohibited this video from being saved:</h2>

                      <ul>
                        <% video.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="form-group row">
                        <label class="col-sm-4 form-control-label">Video Title:</label> 
                          <div class="col-sm-8">
                              <%= form.text_field :video_title %>       
                          </div>
                  </div>
                    <div class="form-group row">
                        <label class="col-sm-4 form-control-label">Video Clip:</label> 
                          <div class="col-sm-8">
                             <%= form.file_field :clip %>
                           </div>
                       </div>
                    

               <div class="form-group row ">
                        <label class="col-sm-4 form-control-label"> Thumbnail:</label> 
                          <div class="col-sm-8">
                            <%= form.file_field :thumbnail %>
                        </div>
                </div>
 
                    <div class="form-group row">
                          <label class="col-sm-4 form-control-label">Session Name:</label>
                      <div class="col-sm-8">
                        <%= form.select :session_id, @session.collect  { |p|
                  
                          [ "#{p.session_name}", p.id ] }, 
                         { include_blank: "-Select a Session-"},
                         {class: "form-control"} %>
                          </div>
                    </div>

                       <div class="form-group row">
                        <label class="col-sm-4 form-control-label">Video Description:</label> 
                          <div class="col-sm-8">
                            <%= form.text_area :video_description, class: "form-control" %>
                           </div>
                       </div>


                 <div class="form-group row">       
                        <div class="col-sm-12 mt-2 offset-sm-4">
                          <%= form.submit "Upload ", class: "btn btn-primary"%>
                        </div>
                    </div>

                <% end %>
              </div>
            </div>
          </div>
    </section>
    