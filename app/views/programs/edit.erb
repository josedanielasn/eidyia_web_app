  <div class="content-inner">
    <header class="page-header">
            <div class="container-fluid">
            <h2 class="no-margin-bottom"><%= link_to "Dashboard", index_announcement_path  %> > <%= link_to "Program", index_programs_path  %></h2>
          </div>
    </header>   
      
    <section class="courses-section">
          <div class="col-lg-6 mx-auto">
            <div class="card">
              <div class="card-header d-flex align-items-center">
                <h2 class="h4">Edit Program </h2>
              </div>
              <div class="card-body">
                <%=  form_with model: @program, url: {controller: 'programs', action: 'update'}, :class => "form-horizontal" do |f|%>
                    <div class="form-group row">
                        <label class="col-sm-4 form-control-label">Instructor:</label> 
                        <div class="col-sm-8">
                                <%= text_field_tag(:query_instructor) %>          
                        </div>
                    </div>

                    <div class="form-group row">
                          <label class="col-sm-4 form-control-label">Student:</label> 
                          <div class="col-sm-8">
                                   <%= text_field_tag(:query_student) %>           
                          </div>
                    </div>
                    
                    <div class="form-group row">
                          <label class="col-sm-4 form-control-label">Course Name:</label>
                    
                      <div class="col-sm-8">
                            <%= f.select :course_id, @course.collect { |p| [ p.course_name, p.id ] }, {include_blank: "-select course-"},{class: "form-control"} %>          
                      </div>
                    </div>

                    <div class="form-group row">
                          <label class="col-sm-4 form-control-label">Batch Name:</label>
                    
                        <div class="col-sm-8">
                              <%= f.select :batch_id, @batch.collect { |p| [ p.batch_name, p.id ] }, {include_blank: "-select course-"},{class: "form-control"} %>
                        </div>
                    </div>
                    <div class="form-group row">       
                        <div class="col-sm-12 mt-2 offset-sm-4">
                          <%= f.submit "Save ", class: "btn btn-primary"%>
                        </div>
                    </div>
                  <%end%> 
              </div>
            </div>
          </div>
    </section>
    <%= render partial: 'shared/footer' if current_user %>       
  </div> 
