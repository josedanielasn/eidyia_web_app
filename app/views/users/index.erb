<div class="content-inner">
    <header class="page-header">
          <div class="container-fluid">
                <h2 class="no-margin-bottom">Dashboard > Students</h2>
          </div>
    </header> 
          <%# <%= link_to  "Add new user", new_users_path %>   
           <div class="card  mr-5 ml-5 mt-5">
              <div class="card-header d-flex align-items-center">
                  <h3 > All Students</h3>
              </div>
              <div class="card-body">
                  <div class="table-responsive">                       
                          <table class="table table-striped table-hover" id="batch">
                          <thead>
                              <tr>
                                  <th>Student id</th>
                                  <th>First Name</th>
                                  <th>Last Name</th>
                                  <th>Action</th>

                              </tr>
                          </thead>
                              <%@users.select{|x| x.role ==='student'}.each do |user|%>                             
                          <tbody>
                            <tr>
                              <th scope="row"><%= user.id%></th>
                              <td><%= user.firstname %></td>
                              <td><%= user.lastname %></td>
                              <td><%= link_to  "edit", edit_users_path(user) %></td>
                            </tr>
                          </tbody>
                          <%end%>
                      </table>   
              </div>
          </div>
      </div>
</div>


